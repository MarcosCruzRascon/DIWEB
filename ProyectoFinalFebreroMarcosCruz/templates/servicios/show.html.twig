{% extends 'base.html.twig' %}

{% block title %}Servicios{% endblock %}

{% block body %}
    <h1>Servicios</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ servicio.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ servicio.nombre }}</td>
            </tr>
            <tr>
                <th>Ventajas</th>
                <td>{{ servicio.ventajas }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn btn-outline-info float-left mr-5" href="{{ path('servicios_index') }}">Volver a la lista</a>

    <a class="btn btn-outline-warning float-right" href="{{ path('servicios_edit', {'id': servicio.id}) }}">Editar</a>

    {{ include('servicios/_delete_form.html.twig') }}
{% endblock %}
