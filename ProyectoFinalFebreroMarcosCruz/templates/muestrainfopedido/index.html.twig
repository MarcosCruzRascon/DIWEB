{% extends 'base.html.twig' %}

{% block title %}Productos{% endblock %}

{% block body %}
    <h1>Listado productos</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
        {% for pedido in listaproductos %}
            {% set nombre = pedido.producto.nombre|replace({' ': ''})  %}
            {% set categoria = pedido.producto.categoria.nombre|replace({' ': ''})  %}
            <tr>
                <td><img src="{{asset('uploads/imagenes/productos/')}}/{{categoria}}/{{nombre}}/{{pedido.producto.imagenes[0]}}" width="50" height="50"></img></td>
                <td>{{ pedido.producto.nombre }}</td>
                <td>{{ pedido.producto.precio }}</td>
                <td>{{ pedido.cantidad }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn btn-outline-info float-left mr-5" href="{{ path('pedidos_show', { 'id': app.request.get('id') }) }}">Volver al pedido</a>
{% endblock %}
