{% extends 'base.html.twig' %}

{% block title %}Antonio
{% endblock %}
{% block body %}
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
	<style>
		/* Some custom styles to beautify this example */

		p {
			padding: 50px;
			font-size: 32px;
			font-weight: bold;
			text-align: center;
			background: #dbdfe5;
		}
		.caja {
			-webkit-transition: 1s linear;
			transition: 1s linear;
		}
		.caja:hover {
			-webkit-transform: scale(0.5);
			transform: scale(0.5);
		}

		.texto {
			animation-duration: 3s;
			animation-name: slidein;
		}

		@keyframes slidein {
			from {
				margin-left: 100%;
				width: 300%
			}

			to {
				margin-left: 0;
				width: 100%;
			}
		}
		.texto {
			animation-duration: 3s;
			animation-name: slidein;
			animation-iteration-count: infinite;
		}

		.parallax {
			/* The image used */
			background-image: url("/antonio/imagen-parallax.webp");

			/* Set a specific height */
			min-height: 500px;

			/* Create the parallax scrolling effect */
			background-attachment: fixed;
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
		}

		.caja5 {
			box-shadow: 0 5px 10px black;
			background-color: green;
			height: 100px;
		}

		.gradiente {
			background: linear-gradient(to bottom, blue, white);
		}

	</style>
	<div class="text-center">Implementacion de elementos que no se encuentran en el proyecto</div>
	<div class="container mt-3">
		<div class="row parallax">
			<div style="height:200px;width:100%;background-color:red;font-size:36px">
				Scroll para efecto paralelaje
			</div>
			<div class="col-lg-4 col-md-6">
				<video width="320" height="240" controls>
					<source src="/antonio/video-pagina.mp4" type="video/mp4">
				</video>
			</div>
			<div class="col-lg-4 col-md-6">
				<audio controls>
					<source src="/antonio/ctangana.mp3" type="audio/mp3">
					Your browser does not support the audio element.
				</audio>
			</div>
			<div class="col-lg-4 col-md-6 caja">
				<p>Caja 3 transformacion</p>
			</div>
			<div class="col-lg-4 col-md-6">
				<p class="texto">Caja 4 animacion</p>
			</div>
			<div class="col-lg-4 col-md-6 caja5">
				Caja 5 sombra
			</div>
			<div class="col-lg-4 col-md-6 gradiente">
				Caja 6 gradiente
			</div>
			<div class="col-lg-4 col-md-6">
				<p>Box 7</p>
			</div>
			<div class="col-lg-4 col-md-6">
				<p>Box 8</p>
			</div>
			<div class="col-lg-4 col-md-6">
				<p>Box 9</p>
			</div>
			<div class="col-lg-4 col-md-6">
				<p>Box 10</p>
			</div>
			<div class="col-lg-4 col-md-6">
				<p>Box 11</p>
			</div>
			<div class="col-lg-4 col-md-6">
				<p>Box 12</p>
			</div>
		</div>
	</div>
{% endblock %}
