{% extends 'base.html.twig' %}

{% block title %}Listado de categorias
{% endblock %}

{% block body %}
	<h1>Listado de categorias</h1>
	<div class="count m-2">
		<span class="bg-info rounded">Numero de registros:{{ pagination.getTotalItemCount }}</span>
	</div>
	<div class="table-responsive">
		<table class="table table-striped table-sm">
			<thead>
				<tr>

					<th scope="col">Nombre</th>
					<th scope="col">Acciones</th>
				</tr>
			</thead>
			<tbody>
				{% for categoria in pagination %}
					<tr>
						<td>{{ categoria.nombre }}</td>
						<td>
							<a class="btn btn-dark btn-sm" href="{{ path('categorias_show', {'id': categoria.id}) }}">Ver detalles</a>
							<a class="btn btn-dark btn-sm" href="{{ path('categorias_edit', {'id': categoria.id}) }}">Editar</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">No hay registros</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="navigation row justify-content-center">{{ knp_pagination_render(pagination) }}</div>
	<a class="btn btn btn-outline-success float-left mr-5" href="{{ path('categorias_new') }}">Nueva categoria</a>
{% endblock %}
