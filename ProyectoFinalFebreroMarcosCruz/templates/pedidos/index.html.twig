{% extends 'base.html.twig' %}

{% block title %}Pedidos index{% endblock %}

{% block body %}
    <h1>Pedidos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Idpedido</th>
                <th>Anotaciones</th>
                <th>Ver informacion</th>
            </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td>{{ pedido.id }}</td>
                <td>{{ pedido.idpedido }}</td>
                <td>{{ pedido.anotaciones }}</td>
                <td>
                   <a class="btn btn-dark btn-sm" href="{{ path('pedidos_show', {'id': pedido.id}) }}">Ver informacion</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Sin registro de pedidos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
